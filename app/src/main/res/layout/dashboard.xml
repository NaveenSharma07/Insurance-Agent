<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD7D7">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBD7D7">
    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/insurance">
    </ImageView>

    <LinearLayout
        android:layout_width="203dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#ffffcc"
            android:padding="10dp"
            android:text="Add policy"
            android:textColor="#FF3333"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/Adduser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#ffffcc"
            android:padding="10dp"
            android:text="Add User"
            android:textColor="#FF3333"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/addcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#ffffcc"
            android:padding="10dp"
            android:text="Add Category"
            android:textColor="#FF3333"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/Renewals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#ffffcc"
            android:padding="10dp"
            android:text="Renewal Reminder"
            android:textColor="#FF3333"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/assignpolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="#ffffcc"
            android:padding="10dp"
            android:text="Assign Policy"
            android:textColor="#FF3333"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    </LinearLayout>
</ScrollView>